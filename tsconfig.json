{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "outDir": "dist",
    "strict": true,
    "target": "esnext",
    "types": ["node"]
  },
  "exclude": ["node_modules"],
  "include": ["src", "eslint.config.ts"]
}
